<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:id="@+id/child_layout"
    android:layout_height="match_parent"
    tools:context="learn.com.example.administrator.learn.com.example.administrator.puppy.ChildButtonActivity"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@android:style/TextAppearance.Holo.Medium"
        android:textColor="#FF909090"

        android:text="虚拟面板设置"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#FF909090"/>

    <Switch
        android:id="@+id/is_child_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="0.3"
        style="@android:style/TextAppearance.Medium"
        android:text="面板键触动反馈"

        android:checked="false" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="10dp"

        android:background="#FF909090"/>

    <Switch
        android:id="@+id/set_drive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="0.3"
        android:layout_marginLeft="10dp"
        style="@android:style/TextAppearance.Medium"
        android:text="设备管理器权限设置（第一次锁屏需开启）"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="10dp"

        android:background="#FF909090"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_weight="0.2"
        android:layout_height="wrap_content"
        style="@android:style/TextAppearance.Medium"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="设置面板透明度"
        />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:id="@+id/child_button_touming_seekBar"
        style="@android:style/TextAppearance.Medium"
        android:max="100"
        android:progress="55"
        android:indeterminate="false" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="10dp"

        android:background="#FF909090"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@android:style/TextAppearance.Medium"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="设置面板动画展开速度"
        android:layout_weight="0.2"
        />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:id="@+id/child_button_set_speed"
        style="@android:style/TextAppearance.Medium"
        android:max="100"
        android:progress="55"
        android:indeterminate="false" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2.5dip"
        android:layout_marginTop="10dp"

        android:background="#FF909090"/>

    <TextView
        android:id="@+id/set_button_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:layout_marginTop="10dp"
        style="@android:style/TextAppearance.Holo.Medium"
        android:layout_marginLeft="10dp"
        android:text="设置面板按钮功能"/>

